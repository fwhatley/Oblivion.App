/* Accomodate bootstrap menu and footer
-------------------------------------------------- */
body {
    font-family: 'Open Sans', sans-serif; //Override font globally
    padding-bottom: 20px;
    /* Margin bottom by footer height */
    margin-bottom: 60px;
}

/* Sticky footer styles
-------------------------------------------------- */
html {
  position: relative;
  min-height: 100%;
}
footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: 60px;
  background-color: #f5f5f5;
}

.container .text-muted {
  margin: 20px 0;
}

/* Modal Style
-------------------------------------------------- */
.modal-body {
    overflow-y: auto;
    max-height: 400px;
}
.modal-input {
    margin-bottom: 20px;
}


/* Menubar
-------------------------------------------------- */
#appTitle {
    color: dodgerblue;
}

.appLogo {
    padding-right: 15px;
    height: 2em;
    margin-top: -8px;
    float: left;
}

.navbar-text-avatar {
  padding: 0;
  margin: 0;
}

.green {
  background-color: #2ecc71 !important;
  border-color: #27ae60 !important;
  color: #ecf0f1 !important;
}

.green > a {
  color: #ecf0f1 !important;
}

.green > a:hover, .green > li > a:focus {
  color: #d1ffed !important;
}

.green.active > a, .green.active > a:hover, .green.active > a:focus {
  color: #d1ffed !important;
  background-color: #27ae60 !important;
}

.green.open > a, .green.open > a:hover, .green.open > a:focus {
  color: #d1ffed !important;
  background-color: #27ae60 !important;
}

.green.open > a .caret, .green.open > a:hover .caret, .green.open > a:focus .caret {
  border-top-color: #d1ffed !important;
  border-bottom-color: #d1ffed !important;
}
.green.dropdown > a .caret {
  border-top-color: #ecf0f1 !important;
  border-bottom-color: #ecf0f1 !important;
}

.green.dropdown > a:hover .caret, .green.dropdown > a:focus .caret {
  border-top-color: #d1ffed !important;
  border-bottom-color: #d1ffed !important;
}

@media (max-width: 767px) {
  .green.open .dropdown-menu > li > a {
    color: #ecf0f1 !important;
  }

  .green.open .dropdown-menu > li > a:hover, .green.open .dropdown-menu > li > a:focus {
    color: #d1ffed !important;
    background-color: #27ae60 !important;
  }
}

/* Unauthorized page
-------------------------------------------------- */
.unauthorized {
  max-width: 900px;
}

/* home page
-------------------------------------------------- */
.home-jumbotron {
  margin-top: 50px;
}

/* Common required indicator
-------------------------------------------------- */
.form-group.required .control-label:after {
   content:" *";
   color: #a94442;
}

/* Inline form spacing.
http://stackoverflow.com/questions/19962662/twitter-bootstrap-inline-form-spacing
-------------------------------------------------- */
.form-inline > * {
   margin-right: 15px;
}

/* btn-file - makes nested file input invisible and allows
    a nicely integrated button to be used in place. for this to work,
    file input cannot be hidden or display: none.
    eg. http://www.abeautifulsite.net/whipping-file-inputs-into-shape-with-bootstrap-3/
-------------------------------------------------- */
.btn-file {
  position: relative;
  overflow: hidden;
}
.btn-file input[type=file] {
  position: absolute;
  top: 0;
  right: 0;
  min-width: 100%;
  min-height: 100%;
  font-size: 100px;
  text-align: right;
  opacity: 0;
  background: red;
  cursor: inherit;
  display: block;
}
input[readonly] {
  background-color: white !important;
  cursor: text !important;
}

/* Tooltip width
http://stackoverflow.com/questions/14596743/how-do-you-change-the-width-and-height-of-twitter-bootstraps-tooltips
-------------------------------------------------- */
.tooltip-inner {
    max-width: 300px; //the minimum width
}

.tooltip-wrapper-inline {
  display: inline-block;
}

/* User avatar
-------------------------------------------------- */
.avatar {
  width:50px;
}

/* Pagination bar for System Logs
-------------------------------------------------- */
.pagination-bar {
  text-align:center;
}

/* Animation for waiting on things to load
-------------------------------------------------- */
.waiting {
  width: 30px;
  height: 30px;
  background-color: #333;

  margin: 100px auto;
  -webkit-animation: rotateplane 1.2s infinite ease-in-out;
  animation: rotateplane 1.2s infinite ease-in-out;
}

@-webkit-keyframes rotateplane {
  0% { -webkit-transform: perspective(120px) }
  50% { -webkit-transform: perspective(120px) rotateY(180deg) }
  100% { -webkit-transform: perspective(120px) rotateY(180deg)  rotateX(180deg) }
}

@keyframes rotateplane {
  0% { 
    transform: perspective(120px) rotateX(0deg) rotateY(0deg);
    -webkit-transform: perspective(120px) rotateX(0deg) rotateY(0deg) 
  } 50% { 
    transform: perspective(120px) rotateX(-180.1deg) rotateY(0deg);
    -webkit-transform: perspective(120px) rotateX(-180.1deg) rotateY(0deg) 
  } 100% { 
    transform: perspective(120px) rotateX(-180deg) rotateY(-179.9deg);
    -webkit-transform: perspective(120px) rotateX(-180deg) rotateY(-179.9deg);
  }
}