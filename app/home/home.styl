.card {
  display: inline-block;
  vertical-align: top;
  width: 270px;
  position: relative;
  overflow: hidden;
  margin: 10px;
  background: #FFF;
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
  color: #272727;
  border-radius: 5px; 
  height: 500px;}

.card .title {
  line-height: 20px;
  font-size: 20px;
  font-weight: 300; }

.card .content {
  padding: 20px;
  font-weight: 300;
  border-radius: 0 0 2px 2px; }

.card p {
  margin: 0; }

.card .date {
  border-top: 1px solid rgba(160, 160, 160, 0.2);
  text-align: right;
  font-weight: 500; }

.card a {
  text-decoration: none;
  color: inherit; }

.card a:link {
  background-color: #B2FF99; }

.card a:visited {
  background-color: #FFFF85; }

.card a:hover {
  background-color: #FF704D; }

.card .image {
  position: relative; }

.card .image img {
  border-radius: 2px 2px 0 0;
  position: relative;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 100%; 
  height: 280px;}

.card .image .title {
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 20px;
  color: #FFF; }

.card:hover {
  background: rgba(222, 222, 222, 0.15); }

.image-pic {
  height: 150%;
}